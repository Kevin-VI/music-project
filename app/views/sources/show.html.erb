<%= render partial: "navbar" %>


<div class="container-fluid">
  <div class="row">

    <div class="player">
      <div class="col-sm-7">
        <div class="embed-responsive embed-responsive-16by9">
          <%= render "sources/providers/#{@source.provider.downcase}", source: @source %>
        </div>

        <div class="fb-share-button" data-href="http://vibein.herokuapp.com/sources/<%= @source.id %>/public"></div>
      </div>
    </div>


    <div class="col-sm-5">
      <div class="row">
        <div class="music-list">
          <div id="musics_aside">
            <%= render partial: "sources/musics_aside", locals: {sources: @sources} %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
