<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <%= link_to 'VIBE IN', welcome_index_path, :class => "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Home', welcome_index_path %></li>
        <li class="active"><%= link_to 'Playlist', sources_path %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li style="position: inherit;">
          <div class="popover-markup">
            <button class="btn btn-default btn-add trigger" data-placement='left'>
              <i class="fa fa-plus"></i>
            </button>
            <div class="head hide">Add a new song</div>
            <div class="content hide">

              <%= form_for @source do |f| %>
                  <div class="form-group">
                    <%= label_tag :url %>
                    <%= text_field_tag :url, '', :class => 'form-control', :placeholder => "Enter url here" %>
                  </div>
                <%= f.submit "Submit", :class => 'btn btn-default btn-block' %>
              <% end %>

            </div>
            <div class="footer hide">test</div>
          </div>
        </li>

        <li class="disconnect">
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-power-off"></i>
          <% end %>
        </li>
      </ul>

      <form class="navbar-form navbar-right" role="search" action="/sources" method="GET">
        <div class="form-group">
          <input name="search" type="text" class="form-control search-navbar" placeholder="Tracks, Artist, Channel, ...">
        </div>
        <button type="submit" class="btn btn-default btn-search"><i class="fa fa-search"></i></button>
      </form>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>


<div class="bg-playlist">
  <div class="container">
    <div class="music-table">
      <div class="row">

         <ul class="list-unstyled"><% @sources.reverse.each do |source| %>
          <li>
            <div class="col-sm-12 col-md-6">
              <%= link_to source_path(source) do %>
                <%= image_tag source.picture.url(:medium) %>
              <% end %>

            <h3><%= link_to truncate(source.title, length: 50, separator: ' '), source_path(source) %></h3>
            <h4>
              <% time = source.duration.to_i %>
              <%= time.divmod(60)[0] %>min<%= time.divmod(60)[1] %>
              <%= link_to current_user.music_for(source), method: :delete do %>
                <i class="fa fa-times"></i>
              <% end %>
            </h4>

          </li>
            <% end %>
          </ul>

      </div>

    </div>
  </div>
</div>