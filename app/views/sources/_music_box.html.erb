<div class="col-xs-12 col-md-6">
  <div class="music-box">
    <div class="row">
      <div class="col-xs-4">
        <%= link_to source do %>
          <%= image_tag source.picture.url(:medium), width: "100%", class: 'music-image' %>
        <% end %>
      </div>
      <div class="col-xs-8">
        <h3 class="music-title">
          <%= link_to truncate(source.title, length: 50, separator: ' '), source %>
          <%= link_to source, method: :delete do %>
            <i class="fa fa-times"></i>
          <% end %>
        </h3>

        <ul class="list-unstyle list-inline">
          <li>
            <h4>
              <%= source.time %>
            </h4>
          </li>

          <li>
            <div id="popover_<%= source.id%>" class="popover-markup">
              <% music = Music.where('source_id' => source.id).first %>
              <%= render partial: "sources/popover", locals: {music: music} %>
            </div>
          </li>

          <li>
            <div id="categories_<%= source.id%>">
              <%= render partial: "sources/categories", locals: {source: source} %>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>