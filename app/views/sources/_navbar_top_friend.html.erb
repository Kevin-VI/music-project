<div class="navbar-top">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-sm-4 col-xs-12 col-md-4">
        <div class="pull-left">
          <ul class="userMenu">
            <li>
              <a>Les sons de <%= @friend.name %></a>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-lg-9 col-sm-8 col-md-8 hidden-xs no-margin no-padding">
        <div class="pull-right">
          <ul class="userMenu">
            <% if params[:category_id] != nil %>
              <li><%= link_to 'View all', friend_sources_path(@friend_id) %></li>
            <% end %>
            <% @friend.categories.each do |category| %>
              <% if params[:category_id].to_i == category.id %>
                <li>
                  <%= link_to friend_category_sources_path(@friend_id, category.id) do %>
                    <i class="fa fa-play"></i> <%= category.title %>
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to category.title, friend_category_sources_path(@friend_id, category.id) %>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>